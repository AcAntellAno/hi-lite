{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}


<div class="container center card-login">
  <br>
<div class="card-panel">
    <h1>Edit Post</h1>
    <br>
<div class="row">
  <form class="col s12" action="/ideas/{{idea.id}}?_method=PUT" method="POST" >
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field col s12">
        <input name="title" value="{{idea.title}}" id="title" type="text" class="validate" required>
        <span class="helper-text" data-error="Title cannot be blank"></span>
        <label for="title">Title</label>
      </div>
    </div>
</div>


<div class="row">
  <div class="input-field col s12">
    <input name="image" value="{{idea.image}}" id="image" type="text">
    <label for="image">Image URL</label>
  </div>
</div>

<div class="row">
  <div class="row">
    <div class="input-field col s12">
      <textarea name="details" id="body" class="materialize-textarea validate" required>{{idea.details}}</textarea>
      <span class="helper-text" data-error="Body cannot be blank"></span>
      <label for="body">Body</label>
    </div>
  </div>
</div>

<div class="edit-buttons-container">
<button class="btn waves-effect waves-light" type="submit" name="action">Save Changes
</button>

<form method="post" action="/ideas/{{idea.id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn" value="Delete">
        <i class="fa fa-trash" aria-hidden="true"></i>
        DELETE
      </button>
</form>

</div>

</form>
</div>
</div>
</div>
